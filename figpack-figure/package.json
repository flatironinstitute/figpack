{
  "name": "figpack-figure",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run build:packages && concurrently \"npm run dev:packages\" \"vite\"",
    "dev:packages": "concurrently \"npm run dev:plugin-sdk\" \"npm run dev:main-plugin\"",
    "dev:plugin-sdk": "npm run dev --workspace=@figpack/plugin-sdk",
    "dev:main-plugin": "npm run dev --workspace=@figpack/main-plugin",
    "build": "npm run build:packages && tsc -b && vite build",
    "build:packages": "npm run build:plugin-sdk && npm run build:main-plugin",
    "build:plugin-sdk": "npm run build --workspace=@figpack/plugin-sdk",
    "build:main-plugin": "npm run build --workspace=@figpack/main-plugin",
    "build:gui": "tsc -b && vite build",
    "clean": "npm run clean --workspaces --if-present && rm -rf dist",
    "lint": "eslint .",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "format:all": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\" \"packages/**/*.{ts,tsx,js,jsx}\""
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@figpack/plugin-sdk": "file:./packages/figpack-plugin-sdk",
    "@figpack/main-plugin": "file:./packages/figpack-main-plugin",
    "@fortawesome/free-solid-svg-icons": "^7.0.0",
    "@fortawesome/react-fontawesome": "^0.2.3",
    "@mui/material": "^7.3.1",
    "chroma-js": "^3.1.2",
    "mathjs": "^14.6.0",
    "numcodecs": "^0.3.2",
    "pako": "^2.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-plotly.js": "^2.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/chroma-js": "^3.1.1",
    "@types/node": "^24.2.1",
    "@types/pako": "^2.0.3",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.1.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  }
}
